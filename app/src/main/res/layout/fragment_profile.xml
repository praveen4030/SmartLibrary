<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainFragments.ProfileFragment"
    android:layout_marginBottom="56dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/user_profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/nameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userImage"
        android:text="User name"
        android:textSize="27sp"
        android:textColor="@color/lightblack"
        android:textStyle="bold|italic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/verifyTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameTv"
        android:text="Verification"
        android:textSize="18sp"
        android:textColor="@color/grey"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"/>

    <ImageView
        android:id="@+id/editView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_edit"
        android:layout_margin="14dp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/rowsLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/verifyTv"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp"
            android:elevation="0dp"
            android:paddingBottom="12dp">

            <RelativeLayout
                android:id="@+id/uniqueIDRl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="0dp">

                <ImageView
                    android:id="@+id/iconView1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_featured_video_purple_a200_24dp"
                    android:scaleType="fitXY"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/infoTv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unique ID"
                    android:layout_toEndOf="@id/iconView1"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:textSize="16sp"
                    android:textColor="@color/lightblack"/>

                <TextView
                    android:id="@+id/uniqueIDTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unique ID"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="19dp"
                    android:textSize="14sp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="16dp"
                    android:textColor="@color/grey"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_below="@id/iconView1"
                    android:alpha="0.6"
                    android:layout_marginStart="70dp"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp"
            android:elevation="0dp"
            android:paddingBottom="12dp">

            <RelativeLayout
                android:id="@+id/booksRl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="0dp">

                <ImageView
                    android:id="@+id/iconView2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_book"
                    android:scaleType="fitXY"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/infoTv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Books"
                    android:layout_toEndOf="@id/iconView2"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:textSize="16sp"
                    android:textColor="@color/lightblack"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_below="@id/iconView2"
                    android:alpha="0.6"
                    android:layout_marginStart="70dp"/>

                <ImageView
                    android:id="@+id/arrowView2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:backgroundTint="@color/lightblack"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp"
            android:elevation="0dp"
            android:paddingBottom="12dp">

            <RelativeLayout
                android:id="@+id/issueBookRl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="0dp">

                <ImageView
                    android:id="@+id/iconView3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_bookmark"
                    android:scaleType="fitXY"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/infoTv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Issue Books"
                    android:layout_toEndOf="@id/iconView3"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:textSize="16sp"
                    android:textColor="@color/lightblack"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_below="@id/iconView3"
                    android:alpha="0.6"
                    android:layout_marginStart="70dp"/>

                <ImageView
                    android:id="@+id/arrowView3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:backgroundTint="@color/lightblack"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp"
            android:elevation="0dp"
            android:paddingBottom="12dp">

            <RelativeLayout
                android:id="@+id/returnRl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="0dp">

                <ImageView
                    android:id="@+id/iconView4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_return"
                    android:scaleType="fitXY"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/infoTv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Return Books"
                    android:layout_toEndOf="@id/iconView4"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:textSize="16sp"
                    android:textColor="@color/lightblack"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_below="@id/iconView4"
                    android:alpha="0.6"
                    android:layout_marginStart="70dp"/>

                <ImageView
                    android:id="@+id/arrowView4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:backgroundTint="@color/lightblack"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp"
            android:elevation="0dp"
            android:paddingBottom="12dp"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/membershipRl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="0dp">

                <ImageView
                    android:id="@+id/iconView5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_membership"
                    android:scaleType="fitXY"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/infoTv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Membership"
                    android:layout_toEndOf="@id/iconView5"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:textSize="16sp"
                    android:textColor="@color/lightblack"/>

                <TextView
                    android:id="@+id/membershipTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 months"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="19dp"
                    android:textSize="14sp"
                    android:layout_toStartOf="@id/arrowView5"
                    android:textColor="@color/grey"/>

                <ImageView
                    android:id="@+id/arrowView5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:backgroundTint="@color/lightblack"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/raw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account"
        android:textAllCaps="true"
        android:textSize="21sp"
        android:textColor="@color/lightblack"
        android:textStyle="bold|italic"
        android:layout_below="@id/rowsLl"
        android:layout_margin="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/raw"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp"
            android:elevation="0dp"
            android:paddingBottom="12dp">

            <RelativeLayout
                android:id="@+id/logOutRl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="0dp">

                <ImageView
                    android:id="@+id/iconView6"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_log_out"
                    android:scaleType="fitXY"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/infoTv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log Out"
                    android:layout_toEndOf="@id/iconView6"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:textSize="16sp"
                    android:textColor="@color/lightblack"/>


                <ImageView
                    android:id="@+id/arrowView6"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:backgroundTint="@color/lightblack"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</RelativeLayout>